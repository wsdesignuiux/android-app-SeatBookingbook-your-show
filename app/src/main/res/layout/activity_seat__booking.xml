<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".Seat_Booking">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="270dp">

                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/homeimage1"
                    android:layout_width="match_parent"
                    android:layout_height="182.1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/antman"
                    app:riv_corner_radius_bottom_left="14.4dp"
                    app:riv_corner_radius_bottom_right="14.4dp" />

                <include layout="@layout/toolbar_moviepage" />


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19.21dp"
                    android:layout_marginRight="19.21dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="79.81dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="9.7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:elevation="10dp"
                        android:padding="19.2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.08dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/sp_car_name1"
                                android:layout_width="256dp"
                                android:layout_height="30dp"
                                android:background="@drawable/custom_spinner_movie_ticket"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="17.36dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="144dp"
                                android:layout_height="28dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:background="@drawable/day_rect_moviepage_gray"
                                android:orientation="vertical">


                                <Spinner
                                    android:id="@+id/sp_car_name2"
                                    android:layout_width="75dp"
                                    android:layout_height="30dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:background="@drawable/custom_spinner_movie_ticket_time"
                                    android:spinnerMode="dropdown" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="144dp"
                                android:layout_height="28dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/day_rect_moviepage_gray"
                                android:orientation="vertical">


                                <Spinner
                                    android:id="@+id/sp_car_name3"
                                    android:layout_width="70dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/custom_spinner_movie_ticket_time"
                                    android:spinnerMode="dropdown" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="14.4dp"
                            android:background="@drawable/day_rect_moviepage_gray"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!--<customfonts.MyTextView_Roboto_Bold-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="Ant Man and the Wasp"-->
                            <!--android:textColor="#212224"-->
                            <!--android:textSize="17.3dp" />-->

                            <Spinner
                                android:id="@+id/sp_car_name4"
                                android:layout_width="200dp"
                                android:layout_height="30dp"
                                android:background="@drawable/custom_spinner_movie_ticket_time"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="4.8dp"
                    android:src="@drawable/ic_brightness_1_black_24dp"
                    android:tint="#ebeced" />

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textColor="#868e96"
                    android:textSize="9.6sp" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="19.2dp"
                    android:layout_marginRight="4.8dp"
                    android:src="@drawable/ic_brightness_1_black_24dp" />

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booked"
                    android:textColor="#868e96"
                    android:textSize="9.6sp" />


                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="19.2dp"
                    android:layout_marginRight="4.8dp"
                    android:src="@drawable/ic_brightness_1_black_24dp"
                    android:tint="#0c4ca8" />

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Selection"
                    android:textColor="#868e96"
                    android:textSize="9.6sp" />


            </LinearLayout>


            <ImageView
                android:layout_marginRight="19.2dp"
                android:layout_marginLeft="19.2dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/graystrap" />

            <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="300dp"-->
                <!--android:scaleType="fitCenter"-->
                <!--android:src="@drawable/seatbooking" />-->

<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutSeat"
        android:orientation="horizontal">

    </LinearLayout>

</HorizontalScrollView>



        </LinearLayout>




    </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_gray_light_border"
        android:layout_margin="20dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_marginLeft="32.6dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/tickets" />

        <customfonts.MyTextView_Roboto_Medium
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x2"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="#868e96"
            android:textSize="17.3dp" />

        <View
            android:layout_width="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:background="#f0f0f1" />


        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL\nPAYABLE:"
            android:layout_marginLeft="31dp"
            android:layout_gravity="center"
            android:layout_marginRight="9dp"
            android:textColor="#5e636a"
            android:textAlignment="textEnd"
            android:textSize="9.6dp" />

        <customfonts.MyTextView_Roboto_Medium
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$25"
            android:layout_gravity="center"
            android:textColor="#212224"
            android:textSize="21.1dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:elevation="2dp"
            android:background="@drawable/oval">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="20dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/right_mark" />
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</RelativeLayout>